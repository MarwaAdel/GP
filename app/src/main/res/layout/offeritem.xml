<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#e6e6e6"
        android:orientation="horizontal"
        android:paddingTop="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="30dp">

            <ImageView
                android:id="@+id/btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="50dp"
                android:onClick="onoffer"
                android:scaleType="centerInside"
                android:src="@drawable/button" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/Discountdifferencez"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:hint="Discountdifference"/>
            <TextView
                android:id="@+id/titlteoffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/descriptionoffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/beforeoffer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  />


                <TextView
                    android:id="@+id/afteroffer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/editLayout"
                    android:layout_width="75dp"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:background="#4a778f"
                    android:layout_weight="1"
                    android:layout_marginRight="1dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/editBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerInside"
                        android:layout_gravity="center"
                        android:padding="12.5dp"
                        android:background="@drawable/edit"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/deleteLayout"
                    android:layout_width="75dp"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:background="#4a778f"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/delete"
                        android:scaleType="centerInside"
                        android:layout_gravity="center"
                        android:id="@+id/img"
                        android:padding="10dp"
                        android:text="delete"/>

                </LinearLayout>

            </LinearLayout>

            </LinearLayout>

    </LinearLayout>



</LinearLayout>